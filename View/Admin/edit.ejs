<div class="form">
    <div class="card" style="width: 400px; margin: auto; border-color: blue;">
      
      <div class="card-header text-center" style="background-color: #76f5ec;">
        
        <h5 class="card-title">Edit Products</h5>
      </div>

      <form action="/edit" method="POST">
        <div class=" mb-3 container">
