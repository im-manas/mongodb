<%-include('../Includes/header.ejs')%>
</head>
  <%-include('../Includes/navigation.ejs')%>
    <br>
    <div class="container">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        <%if(data.length>0){%>
        <%for(let x of data){%>
          <tr>
              <th><%=x.title%></th>
              <th><%=x.price%></th> 
              <th><%=x.description%></th>
              <th>
                <form action="/delete" method="post">
                <a class="fa-solid fa-pen-to-square" href="/edit/<%=x._id%>"></a>
                or
                <input type="hidden" name="product_id" value="<%=x._id%>">
                <button type="submit" class="btn fa-solid fa-trash btn-delete"></button>
                </form> 
              </th>  
          <%}%>
      </tbody>
    </table>
    <%}else{%>
      <h1>Data Not Found.</h1>
  <%}%>
</div>
<%-include('../Includes/footer.ejs')%>